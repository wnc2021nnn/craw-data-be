<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.craw_data.models.CourseContent" table="course_content" schema="public" catalog="academy">
        <id name="contentId">
            <column name="content_id" sql-type="varchar(20)" length="20"/>
        </id>

        <property name="title">
            <column name="title" sql-type="text"/>
        </property>

        <property name="index">
            <column name="index" sql-type="smallint"/>
        </property>

        <many-to-one name="course" class="com.craw_data.models.Course" fetch="select" >
            <column name="course_id" not-null="true" length="20"/>
        </many-to-one>

        <property name="videoLink">
            <column name="video_link" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>