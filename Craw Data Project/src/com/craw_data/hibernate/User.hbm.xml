<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.craw_data.models.User" table="user" schema="public" catalog="academy">
        <id name="userId">
            <column name="user_id" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="email">
            <column name="email" sql-type="text"/>
        </property>
        <property name="password">
            <column name="password" sql-type="text"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="text"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="text"/>
        </property>
        <property name="createTime">
            <column name="create_time" sql-type="integer" not-null="true"/>
        </property>
        <property name="role">
            <column name="role" sql-type="smallint"/>
        </property>
    </class>
</hibernate-mapping>