<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.craw_data.models.Course" table="course" schema="public" catalog="academy">
        <id name="courseId">
            <column name="course_id" sql-type="varchar(20)" length="20"/>
        </id>
        <property name="title">
            <column name="title" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>

        <many-to-one class="com.craw_data.models.Topic" name="topic" fetch="select">
            <column name="topic_id" not-null="false" length="20"/>
        </many-to-one>
        
        <many-to-one name="lecturers" class="com.craw_data.models.User" fetch="select">
            <column name="lecturers_id" not-null="true" length="20" />
        </many-to-one>

        <set name="courseContents" fetch="join" lazy="false">
            <key>
                <column name="content_id" length="20" not-null="false"/>
            </key>
            <one-to-many class="com.craw_data.models.CourseContent"/>
        </set>

        <property name="rating">
            <column name="rating" sql-type="real" precision="-1" not-null="true"/>
        </property>
        <property name="ratingTotal">
            <column name="rating_total" sql-type="smallint" not-null="true"/>
        </property>
        <property name="avatar">
            <column name="avatar" sql-type="text"/>
        </property>
        <property name="price">
            <column name="price" sql-type="real" precision="-1" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>